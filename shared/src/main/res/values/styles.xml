<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Effectivem.Shape.Corner.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/cornerRadiusHalf</item>
    </style>
    <style name="Theme.Effectivem.Shape.Corner.50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/cornerRadius50</item>
    </style>
    <!-- text appearance -->
    <style name="Theme.Effectivem.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!--  Text Input/Edit like MaterialTimePicker -->

    <style name="Theme.Effectivem.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="shapeAppearance">@style/Theme.Effectivem.Shape.Corner.Half</item>
        <!-- remove underline -->
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <!-- enable bottom rounded corners -->
        <item name="shapeAppearanceOverlay">@null</item>
        <!--item name="android:textAppearance">@style/Theme.Effectivem.TextAppearance.LabelMedium</item-->
        <!--item name="shapeAppearanceOverlay">@style/Theme.Effectivem.Shape.Corner.Half</item-->
        <!--item name="boxBackgroundColor">@color/red</item-->
        <!--item name="materialThemeOverlay">@style/Theme.Effectivem.MaterialThemeOverlay</item-->
    </style>

    <style name="Theme.Effectivem.MaterialThemeOverlay" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/Theme.Effectivem.TextInputEditText.FilledBox</item>
    </style>

    <style name="Theme.Effectivem.TextInputEditText.FilledBox" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textAppearance">?attr/button_text_1</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="android:background">@color/red</item>
    </style>

    <!-- card view -->
    <style name="Theme.Effectivem.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">?attr/cornerRadius</item>
        <item name="contentPadding">?attr/viewPadding</item>
    </style>

    <style name="Theme.Effectivem.CardViewNestedStyle" parent="Theme.Effectivem.CardViewStyle">
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <!-- image button -->
    <style name="Theme.Effectivem.ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <!--item name="android:background">@drawable/shape_image_button</item-->
        <item name="android:background">@color/green</item>
        <!--item name="android:background">@android:color/transparent</item-->
    </style>

    <!-- m3 button -->

    <style name="Theme.Effectivem.MaterialButton1" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textAppearance">?attr/button_text_1</item>
        <!--item name="shapeAppearance">@style/Theme.Effectivem.Shape.Corner.Half</item-->
        <item name="android:background">@drawable/shape_rounded_8</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Theme.Effectivem.MaterialButton2" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">?attr/button_text_2</item>
        <item name="android:background">@drawable/shape_rounded_50</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:layout_height">32dp</item>
        <!--item name="shapeAppearance">@style/Theme.Effectivem.Shape.Corner.50</item-->
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.Effectivem.MaterialButton3" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">?attr/text_1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="shapeAppearance">@null</item>
        <item name="android:background">@null</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Theme.Effectivem.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- bottom sheet dialog -->
    <style name="Theme.Effectivem.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Effectivem.BottomSheet.Modal</item>
    </style>

    <!--ignores background style name="Theme.Effectivem.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal"-->
    <style name="Theme.Effectivem.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorSurfaceDim</item>
        <item name="android:background">@drawable/shape_rounded_dialog</item>
    </style>

    <!-- switch -->
    <style name="Theme.Effectivem.MaterialSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">?attr/colorOnSurfaceInverse</item>
    </style>
</resources>