<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Effectivem.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.Label.Medium" parent="Theme.Effectivem.TextAppearance.Caption" />

    <style name="Theme.Effectivem.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- text appearance -->
    <style name="Theme.Effectivem.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
        <!-- TODO: change grey_65 -->
        <item name="android:textColor">@color/grey_65</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/sf_pro_display_light_italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/sf_pro_display_regular_italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    </style>

    <style name="Theme.Effectivem.TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
    </style>

    <!--  Text Input/Edit like MaterialTimePicker -->
    <style name="Theme.Effectivem.TextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- I have no idea why it crashes without this -->
        <item name="enforceTextAppearance">false</item>
        <item name="materialThemeOverlay">@style/Theme.Effectivem.MaterialThemeOverlay</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Theme.Effectivem.MaterialThemeOverlay" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/Theme.Effectivem.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Theme.Effectivem.TextInputEditText.OutlinedBox" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">?attr/button_text_1</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- card view -->
    <style name="Theme.Effectivem.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">?attr/cornerRadius</item>
        <item name="contentPadding">?attr/viewPadding</item>
    </style>

    <style name="Theme.Effectivem.CardViewNestedStyle" parent="Theme.Effectivem.CardViewStyle">
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <!-- image button -->
    <style name="Theme.Effectivem.ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- m3 button -->
    <style name="Theme.Effectivem.MaterialButton.Shape.Corner.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/cornerRadiusHalf</item>
    </style>

    <style name="Theme.Effectivem.MaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textAppearance">?attr/button_text_1</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:textStyle">italic</item>
        <item name="iconTint">?attr/colorOnSurfaceInverse</item>
        <item name="shapeAppearance">@style/Theme.Effectivem.MaterialButton.Shape.Corner.Half</item>
    </style>

    <!-- outline button -->
    <style name="Theme.Effectivem.MaterialButtonOutlineStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textAppearance">?attr/title_4</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:textStyle">italic</item>
        <item name="iconTint">?attr/colorOnSurfaceInverse</item>
    </style>

    <!-- text button -->
    <style name="Theme.Effectivem.MaterialButtonTextStyle" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textAppearance">?attr/button_text_2</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="iconTint">?attr/colorOnSurfaceInverse</item>
    </style>

    <!-- bottom sheet dialog -->
    <style name="Theme.Effectivem.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Effectivem.BottomSheet.Modal</item>
    </style>

    <!--ignores background style name="Theme.Effectivem.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal"-->
    <style name="Theme.Effectivem.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorSurfaceDim</item>
        <item name="android:background">@drawable/shape_rounded_dialog</item>
    </style>

    <!-- switch -->
    <style name="Theme.Effectivem.MaterialSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">?attr/colorOnSurfaceInverse</item>
    </style>
</resources>